@{
    ViewData["Title"] = "Dishes";
    Layout = "~/Views/Shared/_Layout_Admin_Side.cshtml";
}
@using System.Data
@model DataTable
<link href="~/datatables/css/datatables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
<link href="~/datatables/css/responsive.datatables.min.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/datatables/vendors/styles/icon-font.min.css" />
<link rel="stylesheet" type="text/css" href="~/datatables/css/dataTables.bootstrap4.min.css" />
<link href="~/datatables/vendors/styles/icon-font.css" rel="stylesheet" />
<link href="~/datatables/vendors/styles/icon-font.min.css" rel="stylesheet" />
<link href="~/datatables>

<div class="container-fluid py-4">
    <div class="row" style="width:100%;">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h6>Dishes</h6>
                        </div>
                        <div class="col-auto" style="margin-bottom:15px;">
                            <a asp-area="Admin_Side" asp-controller="Home" asp-action="DishAdd" class="btn btn-outline-primary btn-sm mb-0">Add Dish</a>
                        </div>
                    </div>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0   data-table-export ">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Home Name</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Dish Photo
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Dish Name
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Description
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Price
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Category
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Preparation Time
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Cooking Time
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Total Time
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Course
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Cuisine
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Ingredients
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        VideoURl
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Creation Date
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Modification Date
                                    </th>
                                    <th class=" text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 datatable-nosort">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                    <tr>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["HomeName"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["DishPhoto"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["DishName"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["Description"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["Price"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["Category"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["PrepTime"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["CookTime"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["TotalTime"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["Course"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["Cuisine"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["Ingredients"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["VideoURl"]</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@dr["CreationDate"]</p>
                                        </td>
                                        <td class="align-middle text-center">
                                            <p class="text-xs font-weight-bold mb-0">@dr["ModificationDate"]</p>
                                        </td>
                                        <td class="align-middle">
                                            <div style="position: relative;">
                                                <div class="btn btn-link font-24 p-0 line-height-1 no-arrow text-center align-middle">
                                                    <div class="align-middle text-center">
                                                        <form asp-area="Admin_Side" asp-controller="Home" asp-action="DishDelete">
                                                            <a class="text-uppercase text-secondary text-xxs font-weight-bolder" asp-area="Admin_Side" asp-controller="Dish" asp-action="DishAdd" asp-route-stateid="@Convert.ToInt32(dr["DishID"])">
                                                                <i class="dw dw-edit2"></i>
                                                                Edit
                                                            </a>
                                                            &nbsp;


                                                            <input type="hidden" name="DishID" value="@Convert.ToInt32(dr["DishID"])" />
                                                            <button type="submit" class=" text-uppercase text-secondary text-xxs font-weight-bolder" style="border:none;background-color: #fff;" onclick="fun1(event)">

                                                                <i class="dw dw-delete-3"></i>

                                                                Delete
                                                            </button>
                                                        </form>

                                                    </div>
                                                </div>

                                            </div>
                                        </td>
                                    </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

<script src="~/datatables/vendors/scripts/core.js"></script>
<script src="~/datatables/vendors/scripts/script.min.js"></script>
<script src="~/datatables/vendors/scripts/process.js"></script>
<script src="~/datatables/vendors/scripts/layout-settings.js"></script>
